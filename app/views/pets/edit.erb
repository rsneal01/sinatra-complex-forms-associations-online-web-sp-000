<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>
        <input type="checkbox" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %> <%='checked' if @pet.owner == owner %></input><br>
      <% end %>
      <br>
 
    
 
    <input type="submit" value="Update Owner">
  </form>